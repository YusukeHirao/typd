{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "1.0.0",
  "version_name": "1.0 rc",
  "default_locale": "ja",
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "16": "icon_16.png"
  },
  "browser_action": {
    "default_icon": "on.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "dist/background.bundle.js"
    ]
  }, 
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [
        "dist/index.bundle.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "options_page": "options.html"
}
